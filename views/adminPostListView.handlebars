<div class="container">
  <div class="row justify-content-center">
    <div class="col-9">
<div class="row justify-content-center"><p class="h1">Admin Post List View</p></div>
  <div class="row"><button class="btn btn-secondary mb-3" style="width: 100px;" onclick="newPost()">New Post</button></div>
  <div class="row justify-content-center">
    <table class="col-12 table table-hover">
      <thead class="thead-light">
        <tr>
          <th scope="col">Title</th>
          <th scope="col">Author</th>
          <th scope="col">Publish date</th>
          <th scope="col">Operations</th>
        </tr>
      </thead>
      <tbody>
        {{#each posts}}
        <tr class="table-light">
          <td>{{this.title}}</td>
          <td>{{this.author}}</td>
          <td>{{#if this.date}} {{this.date}} {{else}} N/A {{/if}}</td>
          <td><button class="btn btn-secondary" style="width: 100px;" onclick="edit({{this.id}})">Edit</button></td>
        </tr>
        {{/each}}
      </tbody>
    </table>

  </div>
    </div>
  </div>
  
</div>

<script>
  function edit(id) {
    window.location.href = '/edit-post/' + id
  }

  function newPost(id) {
    window.location.href = '/new-post'
  }
</script>