<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-8 ">
            <div class="row justify-content-md-center">
                <h1 class="col-6">{{header}}</h1>
            </div>
            <form action='/new-post' onsubmit="formCheck()"  method='POST'>
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" id="title" name="title" placeholder="Title" >
                </div>
                <div class="form-group">
                    <label for="title">Slug</label>
                    <input type="text" class="form-control" id="slug" name="slug" placeholder="Slug">
                </div>
                <div class="form-group">
                    <label for="content">Content</label>
                    <textarea class="form-control" id="content" name="content" rows="10">{{post.content}}</textarea>
                </div>
                <div class="container">
                <div class="row justify-content-start">
                    <a data-toggle="modal" class='btn btn-secondary text-light' data-target="#modal"> Discard </a>
                    <button class='btn btn-secondary ml-2' formaction='/new-post?draft=true'>Save as draft</button>
                    <button class='btn btn-secondary ml-2'> Publish </button>
                </div>
                <div class="row" style="color: red;" id="errorMsg">{{error}}</div>
            </div>
            </form>
        </div>
    </div>
</div>