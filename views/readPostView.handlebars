<div class='container mt-4'>
    <div class="card">
        <div class="card-header text-center h2">{{blogName}}</div>
        <div class="card-header">
            <div class="container">
                <div class="d-flex justify-content-start">
                    <p class="m-2 h4">{{post.title}}</p>
                    </div>
                <div class="d-flex justify-content-between">
                    <p class="m-2 h5">{{post.author}}</p>
                    <p class="m-2 h5">{{post.date}}</p>
                </div>
            </div>

        </div>
        <div class="card-body">
            <textarea readonly class="text-justify mb-4 container-fluid border-0" rows="15">{{post.content}}</textarea>
        </div>
    </div>
</div>